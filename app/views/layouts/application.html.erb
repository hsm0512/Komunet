<!DOCTYPE html>
<html>
  <head>
    <title>Komunet</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  </head>
  <% if user_signed_in? %>
    <header class="header">
      <div class="header-left">
        <%= link_to root_path, class: "logo" do %>
          <%= link_to image_tag("logo.png", alt: "Komunet", class: "logo-image"), "#" %>
        <% end %>
      </div>
      <nav class="header-right">
        <ul class="nav-menu">
          <li><%= link_to "投稿する", new_post_path, class: "nav-link" %></li>
          <li><%= link_to "投稿一覧", posts_path, class: "nav-link" %></li>
          <li><%= link_to "下書き一覧", "#", class: "nav-link" %></li>
          <li><%= link_to "ユーザー一覧", users_path, class: "nav-link" %></li>
          <li><%= link_to "マイページ", user_path(current_user), class: "nav-link" %></li>
          <li><%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %></li>
        </ul>
      </nav>
    </header>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>

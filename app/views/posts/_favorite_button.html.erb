<div id="favorite-button-<%= post.id %>">
  <% if post.favorited_by?(current_user) %>
    <%= link_to post_favorites_path(post), method: :delete, data: { turbo_method: :delete }, class: "text-decoration-none" do %>
      <i class="bi bi-heart-fill text-danger"></i>
    <% end %>
  <% else %>
    <%= link_to post_favorites_path(post), method: :post, data: { turbo_method: :post }, class: "text-decoration-none" do %>
      <i class="bi bi-heart text-danger"></i>
    <% end %>
  <% end %>
  <span class="ms-1"><%= post.favorites.count %></span>
</div>
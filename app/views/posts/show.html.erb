<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="mb-5"><%= @post.title %></h1>
      
      <div class="mb-5">
        <h4>本文</h4>
        <p><%= simple_format(@post.content) %></p>
      </div>

      <div class="mb-5">
        <h4>業務分野</h4>
        <p><%= @post.job_category.name %></p>
      </div>

      <div class="mb-5">
        <h4>投稿スタイル</h4>
        <p><%= @post.style.name %></p>
      </div>

      <% if @post.image_id.present? %>
        <div class="mb-5">
          <h4>画像</h4>
          <%= attachment_image_tag(@post, :image, class: "img-fluid", style: "height: 600px; width: auto;") %>
        </div>
      <% end %>

      <div class="mb-5">
        <div class="d-flex align-items-center">
          <h4 class="mb-0 me-2">いいね</h4>
          <% if @post.favorited_by?(current_user) %>
            <%= link_to post_favorites_path(@post), data: { turbo_method: :delete } do %>
              <i class="bi bi-heart-fill" style="color: red;"></i>
            <% end %>
          <% else %>
            <%= link_to post_favorites_path(@post), data: { turbo_method: :post } do %>
              <i class="bi bi-heart" style="color: red;"></i>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="mb-5">
        <h4>コメント</h4>
        <%= form_with(model: [@post, @comment], local: true) do |f| %>
          <div class="mb-3">
            <%= f.text_area :content, class: "form-control", rows: 3, placeholder: "コメントを入力してください" %>
          </div>
          <%= f.submit "コメントを送信", class: "btn btn-success" %>
          
          <div class="mt-4">
            <% @post.comments.each do |comment| %>
              <div class="card mb-2">
                <div class="card-body">
                  <p class="card-text"><%= comment.content %></p>
                  <small class="text-muted">投稿者: <%= comment.user.name %>(<%= comment.user.user_name %>)</small>
                  <% if comment.user == current_user %>
                    <%= link_to "削除", post_comment_path(@post, comment), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
                  <% end %>
                </div>
              </div>
            <% end %>
            <%= paginate @comments %>
          </div>
        <% end %>
      </div>

      <div class="mt-6 mb-5">
        <div class="d-flex justify-content-center gap-3">
          <%= link_to "編集する", edit_post_path(@post), class: "btn btn-primary" %>
          <%= link_to "削除する", post_path(@post), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>

